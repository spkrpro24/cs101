//8. Optional: Appendix B provides code for reading a list of words from a
//  file. Read a list of words and print the palindromes.

import java.io.*;

public class Words {

	public static void main(String[] args) throws FileNotFoundException,
			IOException {
		processFile("words.txt");
	}

	@SuppressWarnings("resource")
	public static void processFile(String words) throws FileNotFoundException,
			IOException {
		FileReader fileReader = new FileReader(words);
		BufferedReader in = new BufferedReader(fileReader);
		while (true) {
			String s = in.readLine();
			if (s == null)
				break;
			System.out.println(s);
		}
	}
}
