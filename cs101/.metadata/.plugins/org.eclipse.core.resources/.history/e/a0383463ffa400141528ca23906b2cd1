
public class Time {
	public static void main(String[] args) {
		int hour, minute, second, percentage, totalseconds;
		hour = 20;
		minute = 30;
		second = 22;
		totalseconds = 86400;
	    percentage = +(second + (minute*60) + (hour*3600));
		System.out.println("The number of seconds since midnight:" +(second + (minute*60) + (hour*3600)));
		System.out.println("The number of seconds to midnight:" +((60-second) + ((60-1-minute)*60) + (24-1-hour)*3600));
		System.out.println("Percentage of the Day that has passed:" +(totalseconds/percentage));
	}
}

