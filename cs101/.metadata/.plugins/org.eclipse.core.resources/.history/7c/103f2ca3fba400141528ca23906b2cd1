
public class Time {
	public static void main(String[] args) {
		int hour, minute, second, totalseconds;
		hour = 20;
		minute = 30;
		second = 22;
		totalseconds = 86400;
		System.out.println("The number of seconds since midnight:" +(second + (minute*60) + (hour*3600)));
		System.out.println("The number of seconds to midnight:" +((60-second) + ((60-1-minute)*60) + (24-1-hour)*3600));
		System.out.println("The number of seconds since midnight:" +(second + (minute*60) + (hour*3600)*100/totalseconds));
		System.out.println("Percentage of the Day that has passed:" +(totalseconds*100));
	}
}

